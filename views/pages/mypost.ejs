  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const modal = document.getElementById("deletepostModal");
      const deleteBtn = document.getElementById("deletePost");
      const closeBtn = document.getElementById("closeModalBtn");
      const cancelBtn = document.getElementById("cancel-deletepost-btn");

      if (deleteBtn) {
        deleteBtn.onclick = function() {
          modal.style.display = "flex";
        }
      }

      if (closeBtn) {
        closeBtn.onclick = function() {
          modal.style.display = "none";
        }
      }

      if (cancelBtn) {
        cancelBtn.onclick = function() {
          modal.style.display = "none";
        }
      }

      window.onclick = function(event) {
        if (event.target == modal) {
          modal.style.display = "none";
        }
      }

      const fetchPosts = async () => {
        try {
          const response = await fetch('/post/myp');
          const posts = await response.json();

          

          console.log('Received posts:', posts); // ตรวจสอบข้อมูลที่ได้รับ

          const postsContainer = document.getElementById('postsContainer');
          postsContainer.innerHTML = ''; // ล้างเนื้อหาก่อน
          posts.forEach(post => {
            const postElement = document.createElement('div');
            postElement.classList.add('card-eachpost');

            const formattedDate = new Date(post.date).toISOString().split('T')[0];

            postElement.innerHTML = `
                <div class="left-card">
                </div>
                <div class="center-card">
                    <p >${formattedDate}</p>
                    <div class="subject">
                        <i class="fa-solid fa-book"></i>
                        <p>${post.tag}</p>
                    </div>
                    <p>${post.details}</p>
                    <div class="location">
                        <i class="fa-solid fa-location-dot"></i>
                        <p>${post.location}</p>
                    </div>
                </div>
                <div class="right-card">
                    <i class="fa-solid fa-gear setting-post" id="settingPost"></i>
                    <p>จำนวนคำขอ : <span>${post.requests}</span></p>
                    <i class="fa-solid fa-trash delete-post" id="deletePost"></i>
                </div>
            `;

            postsContainer.appendChild(postElement);
          });
        } catch (error) {
          console.error('Error fetching posts:', error);
        }
      };

      fetchPosts();
    });
  </script>
