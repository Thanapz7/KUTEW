  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const editModal = document.getElementById('editPostModal');
      const closeEditModalBtn = document.getElementById('closeEditModal');
      const editPostForm = document.getElementById('editPostForm');
    
      const openEditModal = (post) => {
        document.querySelector('#editPostForm textarea').value = post.details;
        document.querySelector('#editTag').value = post.tag;
        document.querySelector('#editLocation').value = post.location;
        document.querySelector('#editDate').value = new Date(post.date).toISOString().split('T')[0];
        document.querySelector('#editPrice').value = post.price;
        document.querySelector('#editParticipants').value = post.participants;
        document.querySelector('#editHours').value = post.hours;
    
        editModal.style.display = 'block';
      };
    
      if (closeEditModalBtn) {
        closeEditModalBtn.onclick = function() {
          editModal.style.display = 'none';
        }
      }
    
      window.onclick = function(event) {
        if (event.target == editModal) {
          editModal.style.display = 'none';
        }
      }
    
      const fetchPosts = async () => {
        try {
          const response = await fetch('/post/myp');
          const posts = await response.json();
    
          const postsContainer = document.getElementById('postsContainer');
          postsContainer.innerHTML = '';
    
          posts.forEach(post => {
            const postElement = document.createElement('div');
            postElement.classList.add('card-eachpost');
    
            const formattedDate = new Date(post.date).toISOString().split('T')[0];
    
            postElement.innerHTML = `
              <div class="left-card">
                <img src="${post.image}" class="profile-mypost">
              </div>
              <div class="center-card">
                <p>${formattedDate}</p>
                <div class="subject">
                  <i class="fa-solid fa-book"></i>
                  <p>${post.tag}</p>
                </div>
                <p>${post.details}</p>
                <div class="location">
                  <i class="fa-solid fa-location-dot"></i>
                  <p>${post.location}</p>
                </div>
              </div>
              <div class="right-card">
                <i class="fa-solid fa-gear setting-post" data-post-id="${post.post_id}"></i>
                <p>จำนวนคำขอ : <span>${post.requests}</span></p>
                <i class="fa-solid fa-trash delete-post" data-post-id="${post.post_id}"></i>
              </div>
            `;
    
            postsContainer.appendChild(postElement);
          });
    
          // Add event listener to edit buttons
          const editButtons = document.querySelectorAll('.setting-post');
          editButtons.forEach(button => {
            button.addEventListener('click', (event) => {
              const postId = event.target.getAttribute('data-post-id');
              const post = posts.find(p => p.post_id == postId);
              openEditModal(post);
            });
          });
    
          // Add event listener to delete buttons
          const deleteButtons = document.querySelectorAll('.delete-post');
          deleteButtons.forEach(button => {
            button.addEventListener('click', (event) => {
              currentDeletePostId = event.target.getAttribute('data-post-id');
              modal.style.display = 'flex';
            });
          });
    
          // Confirm delete
          document.getElementById('deletepost-btn').addEventListener('click', async () => {
            if (currentDeletePostId) {
              try {
                await fetch(`/post/${currentDeletePostId}`, {
                  method: 'DELETE'
                });
                modal.style.display = 'none';
                fetchPosts();
              } catch (error) {
                console.error('Error deleting post:', error);
              }
            }
          });
    
        } catch (error) {
          console.error('Error fetching posts:', error);
        }
      };
    
      fetchPosts();
    });
  </script>
