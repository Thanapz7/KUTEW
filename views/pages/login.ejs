<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link href="/css/login.css" rel="stylesheet" />
    <title>Login</title>
  </head>
  <body>
    <div class="login">
      <img
        src="/img/cover.jpg"
        alt="login image"
        class="login__img"
      />
      <form class="login__form" id="login-form" action="/login/signin" method="post">
        <h1 class="login__title">Login</h1>
        <div class="login__content">
          <div class="login__box">
            <i class="ri-user-3-line login__icon"></i>
            <div class="login__box-input">
              <input
                type="text"
                required
                class="login__input"
                placeholder=" "
                id="username"
                name="username"
              />
              <label for="username" class="login__label">Username</label>
            </div>
          </div>
        </div>
        <div class="login__content">
          <div class="login__box">
            <i class="ri-lock-2-line login__icon"></i>
            <div class="login__box-input">
              <input
                type="password"
                required
                class="login__input"
                placeholder=" "
                id="password"
                name="password"
              />
              <label for="password" class="login__label">Password</label>
              <i class="ri-eye-off-line login__eye" id="login-eye"></i>
            </div>
          </div>
        </div>

        <div class="login__check">
          <div class="login__check-group">
            <input type="checkbox" class="login__check-input" />
            <label for="" class="login__check-label">Remember me</label>
          </div>

          <a href="/repassword" class="login__forgot">Forgot Password?</a>
        </div>
        <button class="login__button" type="submit">Login</button>
        <p class="login__register">
          Don't have an account? <a href="/register">Register</a>
        </p>
        <div class="login__admin">
          <i class="ri-admin-line"></i>
          <a href="#">Admin</a>
        </div>
      </form>
    </div>
    <script>
      // show hidden pass
      const eyeIcon = document.querySelector("#login-eye");
      const passwordEl = document.querySelector("#password");

      eyeIcon.addEventListener("click", () => {
        if (eyeIcon.classList.contains("ri-eye-off-line")) {
          eyeIcon.classList.replace("ri-eye-off-line", "ri-eye-line");
          passwordEl.setAttribute("type", "text");
        } else {
          eyeIcon.classList.replace("ri-eye-line", "ri-eye-off-line");
          passwordEl.setAttribute("type", "password");
        }
      });

      // handle login form submission
      document.getElementById('login-form').addEventListener('submit', async function(event) {
        event.preventDefault();

        const username = document.getElementById('username').value;
        const password = document.getElementById('password').value;

        try {
          const response = await fetch('/login/signin', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ username, password })
          });

          const data = await response.json();

          if (response.ok) {
            // เก็บ token ใน localStorage
            localStorage.setItem('token', data.token);

            // เปลี่ยนหน้าไปยังหน้าหลัก
            window.location.href = '/selrole';
          } else {
            alert(data.message);
          }
        } catch (error) {
          console.error('Error logging in:', error);
          alert('มีข้อผิดพลาดในการเข้าสู่ระบบ');
        }
      });
</script>
  </body>
</html>
